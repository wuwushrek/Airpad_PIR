<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="250dp" >
    
     <TextView
        android:id="@+id/programName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:scrollHorizontally="true" />

    <ImageView
        android:id="@+id/typeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/programName"
        android:layout_centerHorizontal="true"
        />

    <ImageButton
        android:id="@+id/play_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/typeImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-15dp"
        android:src="@drawable/play_icon" />

    <ImageButton
        android:id="@+id/delete_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/play_program"
        android:layout_alignTop="@id/play_program"
        android:src="@drawable/delete_icon"
        android:layout_marginRight="-5dp"/>

    <ImageButton
        android:id="@+id/modify_program"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/play_program"
        android:layout_alignTop="@id/play_program"
        android:src="@drawable/pencil_icon"
        android:layout_marginLeft="-5dp"/>

</RelativeLayout>